<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 바탕(카드 내부 배경색) -->
    <item>
        <shape android:shape="rectangle">
            <!-- 카드 라운드와 동일하게 -->
            <corners android:radius="@dimen/radius_16" />
            <!-- 위→아래(90도)로 은은한 그라데이션 -->
            <gradient
                android:type="linear"
                android:angle="90"
                android:startColor="@color/surface_emerald_50" />
        </shape>
    </item>

    <!-- 상단 6dp 포인트 그라데이션 -->
    <item android:gravity="top">
        <shape android:shape="rectangle">
            <size android:height="6dp"/>
            <corners android:topLeftRadius="16dp" android:topRightRadius="16dp"/>
            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/indigo_600"
                android:endColor="@color/emerald_400"/>
        </shape>
    </item>

    <!-- [테두리] 아주 얇은 보더 (마지막 = 위에 그려짐) -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/radius_16" />
            <solid android:color="@android:color/transparent" />
            <!-- 1) 가장 무난: 1dp + 낮은 알파 -->
            <stroke
                android:width="1dp"
                android:color="@color/surface_emerald_100" />
            <!-- 2) 초-얇게 하고 싶다면: 0.5dp도 가능(단, 단말별 렌더링 차이) -->
            <!-- <stroke android:width="0.5dp" android:color="@color/item_border_stronger"/> -->
        </shape>
    </item>
</layer-list>
