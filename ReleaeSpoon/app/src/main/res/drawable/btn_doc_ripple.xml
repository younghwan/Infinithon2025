<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#1F000000">     <!-- 눌림 물결 색 -->

    <!-- ripple이 라운드 밖으로 번지지 않게 마스크 모양 지정 -->
    <item android:id="@android:id/mask">
        <shape>
            <corners android:radius="16dp"/>
            <solid android:color="@android:color/white"/> <!-- 알파만 사용됨 -->
        </shape>
    </item>

    <!-- 실제 버튼 배경(항상 동일) -->
    <item android:drawable="@drawable/bg_button_doc"/>
</ripple>
