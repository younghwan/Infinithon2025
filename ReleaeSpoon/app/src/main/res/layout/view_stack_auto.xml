<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spoqa_han_sans_neo_medium"
        android:paddingBottom="5dp"
        android:text="URL"
        android:textAppearance="?attr/textAppearanceTitleSmall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:paddingTop="12dp"
                android:text="패키지 파일 URL 등록"
                android:textAppearance="?attr/textAppearanceTitleSmall"
                android:textFontWeight="600" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spoqa_han_sans_neo_regular"
                android:paddingBottom="12dp"
                android:paddingTop="4dp"
                android:text="프로젝트 루트의 build.gradle(.kts), pubspec.yaml, Package.swift 등 원격 파일 URL을 입력하세요. 여러 개를 등록하면 모두 스캔합니다."
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />
        </LinearLayout>

    <!-- 4개 중 반드시 1개 선택 -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupKind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:paddingBottom="6dp"
        app:selectionRequired="true"
        app:singleSelection="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipGradle"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:text="Gradle"
            app:checkedIcon="@drawable/dot_mint"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="@dimen/radius_16"
            app:chipIconSize="8dp"
            app:chipIconVisible="false"
            app:chipStrokeColor="@color/zinc_300"
            app:chipStrokeWidth="1dp"
            app:ensureMinTouchTargetSize="false"
            app:rippleColor="@android:color/transparent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSwift"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:text="Swift Package"
            app:checkedIcon="@drawable/dot_mint"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="@dimen/radius_16"
            app:chipIconSize="8dp"
            app:chipIconVisible="false"
            app:chipStrokeColor="@color/zinc_300"
            app:chipStrokeWidth="1dp"
            app:ensureMinTouchTargetSize="false"
            app:rippleColor="@android:color/transparent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPubspec"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:text="Flutter"
            app:checkedIcon="@drawable/dot_mint"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="@dimen/radius_16"
            app:chipIconSize="8dp"
            app:chipIconVisible="false"
            app:chipStrokeColor="@color/zinc_300"
            app:chipStrokeWidth="1dp"
            app:ensureMinTouchTargetSize="false"
            app:rippleColor="@android:color/transparent" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPackageJson"
            style="@style/Widget.Material3.Chip.Filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkable="true"
            android:fontFamily="@font/spoqa_han_sans_neo_medium"
            android:text="JavaScript"
            app:checkedIcon="@drawable/dot_mint"
            app:checkedIconVisible="true"
            app:chipBackgroundColor="@color/white"
            app:chipCornerRadius="@dimen/radius_16"
            app:chipIconSize="8dp"
            app:chipIconVisible="false"
            app:chipStrokeColor="@color/zinc_300"
            app:chipStrokeWidth="1dp"
            app:ensureMinTouchTargetSize="false"
            app:rippleColor="@android:color/transparent" />
    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button_pass"
        android:gravity="center_vertical"
        app:boxBackgroundMode="none"
        app:endIconMode="clear_text"
        app:hintEnabled="false"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etUrl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:fontFamily="@font/spoqa_han_sans_neo_regular"
            android:gravity="center_vertical"
            android:hint="build.gradle"
            android:includeFontPadding="false"
            android:inputType="textUri"
            android:maxLines="1"
            android:minHeight="50dp"
            android:padding="0dp"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColorHint="@color/zinc_500" />
    </com.google.android.material.textfield.TextInputLayout>
</LinearLayout>